<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="information" translate="label comment" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
           showInStore="1">
        <label>Information</label>
        <field id="notification_url" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Notification URL</label>
            <frontend_model>PlacetoPay\Payments\Block\Adminhtml\System\Config\Form\Field\NotifyUrl</frontend_model>
            <comment><![CDATA[URL where Placetopay will send payment status to Magento.]]></comment>
            <config_path>payment/placetopay/notification_url</config_path>
        </field>
    </group>
</include>
