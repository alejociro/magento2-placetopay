<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="gateway" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Connection Settings</label>
        <comment>You will need to set your API keys before you can accept payments. If you do not yet have a PlacetoPay
            account, please &lt;a href="https://www.placetopay.com/web/contactanos" target="_blank"&gt;click here&lt;/a&gt;
            to contact and register.
        </comment>
        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/placetopay/active</config_path>
        </field>
        <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Title</label>
            <comment><![CDATA[This is the payment method title used at the checkout page.]]></comment>
            <config_path>payment/placetopay/title</config_path>
        </field>
        <field id="description" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Description</label>
            <comment><![CDATA[This is the payment method description used at the checkout page.]]></comment>
            <config_path>payment/placetopay/description</config_path>
        </field>
        <field id="allowspecific" translate="label" type="allowspecific" sortOrder="40" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>Payment From Applicable Countries</label>
            <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
            <config_path>payment/placetopay/allowspecific</config_path>
        </field>
        <field id="specificcountry" translate="label" type="multiselect" sortOrder="50" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>Payment From Specific Countries</label>
            <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
            <config_path>payment/placetopay/specificcountry</config_path>
        </field>
        <field id="placetopay_mode" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Mode</label>
            <comment><![CDATA[Set this to production when you are ready to accept payments.]]></comment>
            <source_model>PlacetoPay\Payments\Model\Adminhtml\Source\Mode</source_model>
            <config_path>payment/placetopay/placetopay_mode</config_path>
        </field>
        <field id="placetopay_development_lg" translate="label" type="text" sortOrder="70" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>Development Login</label>
            <comment>
                <![CDATA[<a target="_blank" href="https://panel.placetopay.com">Your PlacetoPay Account</a> &gt; Sites &gt; Development Login]]></comment>
            <depends>
                <field id="placetopay_mode">development</field>
            </depends>
            <config_path>payment/placetopay/placetopay_development_lg</config_path>
        </field>
        <field id="placetopay_development_tk" translate="label" type="obscure" sortOrder="80" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>Development TranKey</label>
            <comment>
                <![CDATA[<a target="_blank" href="https://panel.placetopay.com">Your PlacetoPay Account</a> &gt; Sites &gt; Development TranKey]]></comment>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
            <depends>
                <field id="placetopay_mode">development</field>
            </depends>
            <config_path>payment/placetopay/placetopay_development_tk</config_path>
        </field>
        <field id="placetopay_test_lg" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Test Login</label>
            <comment>
                <![CDATA[<a target="_blank" href="https://panel.placetopay.com">Your PlacetoPay Account</a> &gt; Sites &gt; Test Login]]></comment>
            <depends>
                <field id="placetopay_mode">test</field>
            </depends>
            <config_path>payment/placetopay/placetopay_test_lg</config_path>
        </field>
        <field id="placetopay_test_tk" translate="label" type="obscure" sortOrder="100" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>Test TranKey</label>
            <comment>
                <![CDATA[<a target="_blank" href="https://panel.placetopay.com">Your PlacetoPay Account</a> &gt; Sites &gt; Test TranKey]]></comment>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
            <depends>
                <field id="placetopay_mode">test</field>
            </depends>
            <config_path>payment/placetopay/placetopay_test_tk</config_path>
        </field>
        <field id="placetopay_production_lg" translate="label" type="text" sortOrder="110" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>Production Login</label>
            <comment>
                <![CDATA[<a target="_blank" href="https://panel.placetopay.com">Your PlacetoPay Account</a> &gt; Sites &gt; Production Login]]></comment>
            <depends>
                <field id="placetopay_mode">production</field>
            </depends>
            <config_path>payment/placetopay/placetopay_production_lg</config_path>
        </field>
        <field id="placetopay_production_tk" translate="label" type="obscure" sortOrder="120" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>Production TranKey</label>
            <comment>
                <![CDATA[<a target="_blank" href="https://panel.placetopay.com">Your PlacetoPay Account</a> &gt; Sites &gt; Production TranKey]]></comment>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
            <depends>
                <field id="placetopay_mode">production</field>
            </depends>
            <config_path>payment/placetopay/placetopay_production_tk</config_path>
        </field>
        <field id="sort_order" translate="label" type="text" sortOrder="130" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Sort Order</label>
            <comment><![CDATA[Adjust this to move the payment method above or below other payment methods.]]></comment>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/placetopay/sort_order</config_path>
        </field>
    </group>
</include>
